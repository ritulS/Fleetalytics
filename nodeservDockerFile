# dockerfile for node server

FROM node:16-alpine
WORKDIR ~/cont/nodeserver

MAINTAINER AlfredDaimari

COPY package.json ./
COPY yarn.lock ./

RUN npm install yarn
RUN npx yarn install
RUN mkdir -p ~/cont/nodeserver/public

# source code
COPY services/backend.ts ./
COPY dist/index.html ./public/

EXPOSE 8080

CMD ["npx", "ts-node", "backend.ts"]
